/* 输入框 */
#maininpitbox{
    box-sizing: border-box;
    width: 100%;
    border-top:1rpx solid #ededed;
    background: #f5f5f5;
    position: fixed;
    bottom: 0px;
    left: 0px;
    z-index: 200
}
#maininpit{
    height: 32px;
    border: 1rpx solid #ededed;
    border-radius: 8rpx;
    padding-left: 5rpx;
    background: #fff;
    margin:15rpx;
    float:left;
    width: calc(100% - 70px)
}
.sendbtn{
    float: left;
    width: 46px;
    text-align: center;
    line-height: 46px;
    color:#1d97e0;
}
/* 内容 */
page,.content{
    background: #f1f1f1;
}
.content{
    padding-bottom:60px;
    box-sizing: border-box;
    overflow-x:scroll; 
}
.msgbox{
    box-sizing: border-box;
    width: 100%;
    margin:35rpx 0; 
    padding:0 15rpx;
    padding-right:60px; 
    overflow:hidden;
}
.msgbox .portrait{
    width: 38px;
    height: 38px;
    border-radius: 50%;
    overflow: hidden;
    float: left;
}
.portrait image{
    width: 100%;
    height:100%
}
.msgbox .msg{
    box-sizing: border-box;
    border: 1rpx solid #ddd;
    background: #fff;
    min-height: 38px;
    max-width: calc(100% - 116rpx);
    float: left;
    font-size: 15px;
    line-height: 18px;
    padding:10px;
    margin-left: 23rpx;
    border-radius: 8rpx;
    position: relative;
    word-break: break-all;
}
.msgbox .msg:before{
    display: block;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    content: "";
    border-left: 1rpx solid #ddd;
    border-top: 1rpx solid #ddd;
    transform: rotate(-45deg);
    position:absolute;
    top:15px;
    left: -6rpx;
}
.msgbox.mymsg{
    float: right;
    padding:0 15rpx;
    padding-left:60px;
}
.msgbox.mymsg .portrait{
    float: right;
}
.msgbox.mymsg .msg{
    float: right;
    margin: 0;
    margin-right: 23rpx;
    background: #9EEA6A
}
.msgbox.mymsg .msg:before{
    background: #9EEA6A;
    left: calc(100% - 6rpx);
    transform: rotate(45deg);
}